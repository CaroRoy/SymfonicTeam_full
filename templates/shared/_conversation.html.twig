{% if allComments | length > 0 %}
    <div class="comments-knp">
        {{knp_pagination_render(comments)}}
    </div>
    <ul>
        {% for c in comments %}
            <li class="col-12 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">message écrit par {{c.user.firstName}}, le {{c.createdAt | date('d/m/Y')}} à {{c.createdAt | date('H:i:s')}}</h6>
                        <p class="card-text">{{c.message}}</p>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
{% else %}
    <h6>Aucun message pour le moment</h6>
{% endif %}
