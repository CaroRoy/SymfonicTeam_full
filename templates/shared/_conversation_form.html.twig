<div class="row new-message">
    <div class="col-12 mb-2">
        <div class="card">
            <div class="card-header">
                <h6>Ecrire un nouveau message</h6>
            </div>
            <div class="card-body">
                {% if app.user %}
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-outline-primary mt-3" type="submit">Envoyer</button>
                    {{ form_end(form) }}
                {% else %}
                    <p>Connecte-toi pour envoyer un message</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
