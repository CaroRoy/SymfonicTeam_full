{% extends "base.html.twig" %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{asset('css/style_event_list.css')}}">
{% endblock %}

{% block body %}
    <div class="flash">
        {% include "shared/_messages_flash.html.twig" %}
    </div>

    <main>
      <section>

        <a href="{{path('user_private_space')}}" class="btn btn-light button-back">
          <i class="fas fa-angle-double-left"></i> Retour
        </a>

        {% if replys | length > 0 %}
            <h2>Tu as {{replys | length}} séance(s) enregistrée(s) :</h2>

            {% for r in replys %}
                <article>
                    {% include "shared/_event_description.html.twig" with {'event' : r.event} %}
                    <div class="boutons">
                        <a href="{{path('user_interested_show', {'id' : r.id })}}" class="btn btn-primary">
                            <i class="fas fa-info-circle"></i> Détails
                        </a>
                    </div>
                </article>
            {% endfor %}

        {% else %}
            <div class="no-event">
                <h5>Tu ne participes à aucune séance pour le moment</h5>
                <a href="{{path('event_list')}}" class="btn btn-primary">Consulter les séances !</a>
            </div>
        {% endif %}

        <a href="{{path('user_private_space')}}" class="btn btn-light button-back">
          <i class="fas fa-angle-double-left"></i> Retour
        </a>

      </section>
    </main>
{% endblock %}
