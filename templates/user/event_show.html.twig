{% extends "base.html.twig" %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{asset('css/style_user_event_list.css')}}">
{% endblock %}

{% block body %}
    <div class="flash">
        {% include "shared/_messages_flash.html.twig" %}
    </div>
    
    <main>
      <section class="my-4">
            <article>
                <div class="top">
                    <h3>{{event.title}}</h3>
                    <div>
                        <h6 class="m-0 me-2 p-0">Date :</h6>
                        <p class="m-0 p-0">le {{event.meetingDatetime | date('d/m/Y')}} à {{event.meetingDatetime | date('H:i')}}</p>
                    </div>
                    <div>
                        <h6 class="m-0 me-2 p-0">Lieu :</h6>
                        <p class="m-0 p-0">
                        {{event.meetingPlace}}, {{event.meetingPostalCode}}, {{event.meetingCity}}
                        </p>
                    </div>
                </div>

                <div class="bas">
                        <div>
                            <h6 class="m-0 me-2 p-0">Instrument(s) :</h6>
                            <p class="m-0 p-0">
                                {% for i in event.instrument %}
                                    {{i}} 
                                {% endfor %}               
                            </p>
                        </div>
                        <div>
                            <h6 class="m-0 me-2 p-0">Style(s) de musique :</h6>
                            <p class="m-0 p-0">
                                {% for type in event.typeOfMusic %}
                                {{type}} 
                                {% endfor %}
                            </p>
                        </div>
                    <div>
                        <h6 class="m-0 me-2 p-0">Infos supplémentaires :</h6>
                        <p class="m-0 p-0">{{event.content}}</p>
                    </div>
                </div>

                <hr>
                
                <div>
                    {% if replys | length > 0 %}
                        <h6 class="m-0 me-2 mb-3 p-0">Ils participeront :</h6>
                        <ul class="d-flex">
                            {% for r in replys %}
                                <li class="me-5 d-flex flex-column align-items-center">
                                    <img 
                                        class="button avatar"
                                        {% if r.user.avatar is not same as null %}
                                        src="{{r.user.avatar}}"
                                        {% else %}
                                        src="{{asset('images/default-avatar.jpg')}}"
                                        {% endif %}
                                        alt="photo"
                                    >
                                    <p>{{r.user.firstName}}</p>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <h6>Aucun participant pour le moment</h6>
                    {% endif %}
                </div>

                <hr>

                <div class="boutons">
                    <a href="{{path('event_update', {'id' : event.id })}}" class="btn btn-primary">
                        <i class="fas fa-tools"></i> Modifier
                    </a>
                    <button class="btn btn-dark" id="js-openModalDelete">
                        <i class="fas fa-trash-alt"></i> Supprimer
                    </button>
                </div>
            </article>

            <a href="{{path('user_event_list')}}" class="btn btn-light button-back">
                <i class="fas fa-angle-double-left"></i> Retour
            </a>
      </section>
    </main>

    {% include "shared/_modal/_delete_event.html.twig" with {'id' : event.id }  %}
    <script src={{asset('js/deleteModal.js')}}></script>

{% endblock %}
